pipeline {
    agent any

    environment {
        NODEJS_VERSION = "18" // Update if needed
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/sumit-panigrahi/atomic-ds-react.git' // Replace with your repo
            }
        }

        stage('Setup Node.js') {
            steps {
                script {
                    def nodejs = tool name: "NodeJS ${NODEJS_VERSION}", type: "jenkins.plugins.nodejs.tools.NodeJSInstallation"
                    env.PATH = "${nodejs}/bin:${env.PATH}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'build/**', fingerprint: true
            }
        }

        stage('Deploy (Optional)') {
            steps {
                echo "Add deployment steps if needed"
            }
        }
    }
}
